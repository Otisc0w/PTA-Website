<!DOCTYPE html>
<html>
<head>
  <title>Poomsae Scoresheet</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/scoresheet.css" />
</head>
<body>
  <div class="container">
    <h1>Poomsae Scoresheet for Group {{groupnum}}</h1>
    <form action="/submit-poomsae-scores" method="POST">
      <input type="hidden" name="eventid" value="{{eventid}}">
      <input type="hidden" name="groupnum" value="{{groupnum}}">
      <table>
        <thead>
          <tr>
            <th>Athlete Name</th>
            <th>Technical Score</th>
            <th>Presentation Score</th>
            <th>Total Score</th>
            <th>Performance Time</th>
            <th>Judge Scores</th>
            <th>Ranking</th>
          </tr>
        </thead>
        <tbody>
          {{#each athletes}}
          <tr>
            <td>{{this.athlete_name}}</td>
            <td><input type="number" name="technicalscore_{{this.athleteid}}" min="0" max="10" step="0.1" required></td>
            <td><input type="number" name="presentationscore_{{this.athleteid}}" min="0" max="10" step="0.1" required></td>
            <td><input type="number" name="totalscore_{{this.athleteid}}" readonly></td>
            <td><input type="time" name="performancetime_{{this.athleteid}}" required></td>
            <td><input type="text" name="judgescores_{{this.athleteid}}" required></td>
            <td><input type="number" name="ranking_{{this.athleteid}}" min="1" required></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <button type="submit">Submit Scores</button>
    </form>
  </div>
</body>
</html>
