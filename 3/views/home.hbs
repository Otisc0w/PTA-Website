  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const events = [
        { id: "event1", name: "Event x" },
        { id: "event2", name: "Event y" },
        { id: "event3", name: "Event z" }
      ];

      const news = [
        { id: "news1", name: "Event x" },
        { id: "news2", name: "Event y" },
        { id: "news3", name: "Event z" }
      ];

      const eventsContainer = document.getElementById('events');
      events.forEach(event => {
        const eventDiv = document.createElement('div');
        eventDiv.className = 'event';
        eventDiv.id = event.id;
        eventDiv.textContent = event.name;
        eventsContainer.appendChild(eventDiv);
      });

      const newsContainer = document.getElementById('news');
      news.forEach(newsItem => {
        const newsDiv = document.createElement('div');
        newsDiv.className = 'news-item';
        newsDiv.id = newsItem.id;
        newsDiv.textContent = newsItem.name;
        newsContainer.appendChild(newsDiv);
      });
    });
