<!DOCTYPE html>
<html>
<head>
    <title>PTA | Home</title>
    <link rel="icon" type="image/x-icon" href="../images/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="../stylesheets/home.css" />
</head>
<body class="container">
    <div class="header">
        <div class="navbar">
            <a href="home"><img src="/images/logo.png" class="logo" alt="Logo"></a>
            <ul class="tabs">
                <li class="home"><a href="home">Home</a></li>
                <li class="athletes"><a href="athletes">Athletes</a></li>
                <li class="clubs"><a href="clubs">Clubs</a></li>
                <li class="events"><a href="events">Events</a></li>
                <li class="membership"><a href="membership">Membership</a></li>
                <li class="forum"><a href="forum">Forum</a></li>
                <li class="profile-pic">
                    <a href="#" onclick="toggleDropdown()">
                        <img src="/images/goofy.jpg" alt="Profile">
                    </a>
                    <div id="dropdown" class="dropdown-content">
                        <a href="profile">Profile</a>
                        <a href="settings">Settings</a>
                        <a href="logout">Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="home-container">
        <div class="left-panel"></div>

        <div class="main-panel">
            <div class="upcoming-events">
                <h2>Upcoming Events</h2>
                <div id="events" class="horizontal-container">
                    <div class="event">
                        <img src="path-to-event-image1.jpg" alt="Event 1">
                        <h3>Random Weigh In - May 26, 2024 7:00AM</h3>
                        <p>Loading... Taking too long? Reload document | Open in new tab</p>
                        <a href="#">Read More</a>
                    </div>
                    <div class="event">
                        <img src="path-to-event-image2.jpg" alt="Event 2">
                        <h3>Event y</h3>
                        <p>Loading... Taking too long? Reload document | Open in new tab</p>
                        <a href="#">Read More</a>
                    </div>
                    <div class="event">
                        <img src="path-to-event-image3.jpg" alt="Event 3">
                        <h3>Event z</h3>
                        <p>Loading... Taking too long? Reload document | Open in new tab</p>
                        <a href="#">Read More</a>
                    </div>
                </div>
            </div>

            <div class="news">
                <h2>News</h2>
                <div id="news" class="horizontal-container">
                    <div class="news-item">
                        <img src="path-to-news-image1.jpg" alt="News 1">
                        <h3>Random Weigh In - May 25, 2024 12:00PM</h3>
                        <p>Loading... Taking too long? Reload document | Open in new tab</p>
                        <a href="#">Read More</a>
                    </div>
                    <div class="news-item">
                        <img src="path-to-news-image2.jpg" alt="News 2">
                        <h3>Event y</h3>
                        <p>Loading... Taking too long? Reload document | Open in new tab</p>
                        <a href="#">Read More</a>
                    </div>
                    <div class="news-item">
                        <img src="path-to-news-image3.jpg" alt="News 3">
                        <h3>Event z</h3>
                        <p>Loading... Taking too long? Reload document | Open in new tab</p>
                        <a href="#">Read More</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="right-panel"></div>
    </div>

    <footer>
        <div class="footer-content">
            <div class="pta-logo">
                <img src="/images/pta-logo.png" alt="PTA Logo">
            </div>
            <div class="contact-info">
                <p>Philippine Taekwondo Central Headquarters</p>
                <p>Rizal Memorial Coliseum, Manila, Philippines</p>
                <p>0977 384 5879</p>
                <p>pthtkd@gmail.com</p>
            </div>
            <div class="social-media">
                <p>Follow us</p>
                <a href="https://www.facebook.com"><img src="/images/facebook.png" alt="Facebook"></a>
                <a href="https://www.instagram.com"><img src="/images/instagram.png" alt="Instagram"></a>
                <a href="https://www.youtube.com"><img src="/images/youtube.png" alt="YouTube"></a>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const events = [
                { id: "event1", name: "Random Weigh In - May 26, 2024 7:00AM", image: "path-to-event-image1.jpg", description: "Loading... Taking too long? Reload document | Open in new tab" },
                { id: "event2", name: "Event y", image: "path-to-event-image2.jpg", description: "Loading... Taking too long? Reload document | Open in new tab" },
                { id: "event3", name: "Event z", image: "path-to-event-image3.jpg", description: "Loading... Taking too long? Reload document | Open in new tab" }
            ];

            const news = [
                { id: "news1", name: "Random Weigh In - May 25, 2024 12:00PM", image: "path-to-news-image1.jpg", description: "Loading... Taking too long? Reload document | Open in new tab" },
                { id: "news2", name: "Event y", image: "path-to-news-image2.jpg", description: "Loading... Taking too long? Reload document | Open in new tab" },
                { id: "news3", name: "Event z", image: "path-to-news-image3.jpg", description: "Loading... Taking too long? Reload document | Open in new tab" }
            ];

            const eventsContainer = document.getElementById('events');
            events.forEach(event => {
                const eventDiv = document.createElement('div');
                eventDiv.className = 'event';
                eventDiv.id = event.id;
                eventDiv.innerHTML = `<img src="${event.image}" alt="${event.name}">
                                      <h3>${event.name}</h3>
                                      <p>${event.description}</p>
                                      <a href="#">Read More</a>`;
                eventsContainer.appendChild(eventDiv);
            });

            const newsContainer = document.getElementById('news');
            news.forEach(newsItem => {
                const newsDiv = document.createElement('div');
                newsDiv.className = 'news-item';
                newsDiv.id = newsItem.id;
                newsDiv.innerHTML = `<img src="${newsItem.image}" alt="${newsItem.name}">
                                     <h3>${newsItem.name}</h3>
                                     <p>${newsItem.description}</p>
                                     <a href="#">Read More</a>`;
                newsContainer.appendChild(newsDiv);
            });
        });

        function toggleDropdown() {
            document.getElementById("dropdown").classList.toggle("show");
        }

        window.onclick = function(event) {
            if (!event.target.matches('.profile-pic img')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
    </script>
</body>
</html>
